                  required
                  maxlength="50"
                  class="form-control"
                  id="last_name"
                  name="last_name"
                />
              </div>
            </div>
            <div class="mb-5-row">
              <div class="col">
                <label for="email_addr">Email address</label>
                <input
                  type="email"
                  required
                  maxlength="50"
                  class="form-control"
                  id="email_addr"
                  name="email"
                  placeholder="name@example.com"
                />
              </div>
              <div class="col">
                <label for="phone_input">Phone</label>
                <input
                  type="tel"
                  required
                  maxlength="15"
                  class="form-control"
                  id="phone_input"
                  name="phone"
                  placeholder="123-456-7890"
                  pattern="\d{3}[\-]\d{3}[\-]\d{4}"
                />
              </div>
            </div>
            <div class="mb-5">
              <label for="message">Message</label>
              <textarea
                class="form-control"
                id="message"
                name="message"
                rows="5"
                required
              ></textarea>
            </div>
            <button type="submit" class="btn btn-primary px-4 btn-lg">
              Post
            </button>
          </form>
        </div>
      </div>
